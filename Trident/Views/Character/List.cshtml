@model IEnumerable<Trident.Models.Character>
@{
    ViewBag.Title = "List";
}

<h2>Characters</h2>
<div class="container body-content">
    <form method="get" action="/Character/New">
        <button type="submit" class="btn btn-primary">Add Character</button>
    </form>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Character</th>
                <th scope="col">Weapon Level</th>
                <th scope="col">Weapon Treasure</th>
                <th scope="col">Belongs To</th>
            </tr>
        </thead>
        <tbody>
            @{ int rowNo = 0;}
            @foreach (var character in Model)
            {
            <tr>
                <th scope="row">@{rowNo++;} @rowNo</th>
                <td>@Html.ActionLink(character.CharacterName, "Show/" + character.CharacterID, "Character")</td>
                <td>@character.CharacterWeapon</td>
                <td>@character.CharacterTreasure</td>
                <td>@character.member.MemberName</td>
                <td>@Html.ActionLink("Delete", "Delete", new { id = character.CharacterID }, new { onclick = "return confirm('Are you sure you want to delete this character?');" })</td>
            </tr>
            }
        </tbody>
    </table>
</div>