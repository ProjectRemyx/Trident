@model Trident.Models.ViewModels.CharacterEdit
    @{
        ViewBag.Title = "Edit";
    }

    <h2>Edit Character</h2>

    <form method="post" action="/Character/Edit/@Model.character.CharacterID">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" value="@Model.character.CharacterName" id="CharacterName" name="CharacterName">
        </div>
        <div class="form-group">
            <label>Role</label>
            <input type="text" class="form-control" value="@Model.character.CharacterRole" id="CharacterRole" name="CharacterRole">
        </div>
        <div class="form-group">
            <label>Type</label>
            <input type="text" class="form-control" value="@Model.character.CharacterType" id="CharacterType" name="CharacterType">
        </div>
        <div class="form-group">
            <label>Character Weapon</label>
            <select class="form-control" value="@Model.character.CharacterWeapon" id="CharacterWeapon" name="CharacterWeapon">
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

